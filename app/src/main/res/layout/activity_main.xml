<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="presenter"
            type="br.com.leonardomiyagi.apppaciente.main.MainContract.Presenter" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDivider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="br.com.leonardomiyagi.apppaciente.main.MainActivity">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/appointments_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/empty_message_text_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/activity_appointments_empty_message"
                android:textSize="40sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/schedule_appointment_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/green_button_bg"
                android:onClick="@{() -> presenter.onCreateAppointmentClicked() }"
                android:text="@string/activity_main_schedule_appointment"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/appointments_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:clickable="true"
            android:indeterminate="true"
            android:visibility="gone" />
    </FrameLayout>


</layout>